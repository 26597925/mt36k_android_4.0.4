    var keyBoard = new KeyBoard("keybord", "keynum","keyBackID","keyOKID","ok_button");
   keyBoard.open(document.getElementById('debt_pin'));
    var passWord;
    function cardQuery() {
        passWord = keyBoard.getPin();
        //添加密码验证
        if(checkTableInput.chkPwd(passWord)){
        	// alert(checkTableInput.chkPwd(passWord));
            document.getElementById("errorInfo").innerHTML = checkTableInput.chkPwd(passWord);
            return
        }
        if (passWord.length == 0) return;

       var certType = "01";
                var mobileNo = "";
                var cardType = "0";
                var cardCVN2 = "";
                var tranCheckMode = "1000000000000000";
                var secRelContInfo = "1000000000000000";
                var entryCode = "011";
                var safetyVerifyMode = '1';

                var answer = balanceQuery(termUnitNo, userId, cardId, cardType, passWord, tranCheckMode, secRelContInfo, entryCode, certType, mobileNo, safetyVerifyMode);

                if (answer[0]== "00") {
                    var balance = getElementsFromXml(answer[1], "addnAmount");
                    if (balance == null) {
                        redirect.setParameter("errMsg","未查询到余额");
                        redirect.setParameter("cardId",cardId);
						redirect.setParameter("response_code",answer[0]);
                        redirect.goto("./bankCardBalanceQueryFail.html");
                        //页面跳转
                    } else {
                        balance = balance.substring(28, 40);
                        balance = stringToMoney(balance);
                        //页面跳转
                        redirect.setParameter("cardId",cardId);
                        redirect.setParameter("balance",balance);
                        redirect.goto("./bankCardBalanceQueryResult.html");
                    }
                } else{
                    redirect.setParameter("cardId",cardId);
					redirect.setParameter("responseCode",answer[0]);
                    redirect.goto("./bankCardBalanceQueryFail.html");
                }
    }
