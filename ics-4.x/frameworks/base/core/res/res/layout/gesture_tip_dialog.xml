<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"  >

  <ImageView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/recognition_manual">
  </ImageView> 
 
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="70px" android:orientation="horizontal"  
		android:gravity="center" android:layout_gravity="bottom|center_horizontal">
		<Button android:id="@+id/taste" android:layout_width="120px"
			android:layout_height="40px" android:textSize="24sp" android:text="@string/begin_taste"
			android:layout_marginLeft="15px" android:layout_marginTop="40px" android:gravity="center"
			android:textColor="@color/text_color" android:layout_gravity="center_horizontal"
			android:background="@drawable/gesture_list_selector" android:focusable="true" />
		<Button android:id="@+id/show" android:layout_width="120px"
			android:layout_height="40px" android:text="@string/detail_show"  android:gravity="center"
			android:layout_marginLeft="135px" android:layout_marginTop="40px"
			android:textSize="24sp" android:textColor="@color/text_color" android:layout_marginRight="15px"
			android:layout_gravity="center_horizontal" android:background="@drawable/gesture_list_selector"
			android:focusable="true" />
	</LinearLayout>
</FrameLayout>

